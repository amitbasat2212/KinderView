<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_fregment">
    <fragment
        android:id="@+id/login_fregment"
        android:name="com.example.kinderview.Login_fregment"
        android:label="fragment_login_fregment"
        tools:layout="@layout/fragment_login_fregment" >
        <action
            android:id="@+id/action_login_fregment_to_home_page2"
            app:destination="@id/home_page2" />
    </fragment>
    <fragment
        android:id="@+id/home_page2"
        android:name="com.example.kinderview.Home_page"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_home_page2_to_fragment_edit_post"
            app:destination="@id/fragment_edit_post" />
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="Date"
            app:argType="string" />
        <argument
            android:name="status"
            app:argType="string" />
        <argument
            android:name="likes"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="urlPost"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/sign_in"
        android:name="com.example.kinderview.Sign_in"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_sign_in_to_home_page2"
            app:destination="@id/home_page2" />
    </fragment>
    <fragment
        android:id="@+id/fragment_createPost"
        android:name="com.example.kinderview.CreatePost"
        android:label="fragment_create_post"
        tools:layout="@layout/fragment_create_post" >
        <action
            android:id="@+id/action_createPost_to_home_page23"
            app:destination="@id/home_page2" />
    </fragment>
    <fragment
        android:id="@+id/edit_user"
        android:name="com.example.kinderview.Edit_user"
        android:label="fragment_edit_user"
        tools:layout="@layout/fragment_edit_user" />
    <fragment
        android:id="@+id/fragment_edit_post"
        android:name="com.example.kinderview.fragment_edit_post"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_edit_post" >
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="status"
            app:argType="string" />
        <argument
            android:name="likes"
            app:argType="string" />
        <action
            android:id="@+id/action_fragment_edit_post_to_home_page2"
            app:destination="@id/home_page2" />
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="urlpostedit"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fragment_profile"
        android:name="com.example.kinderview.fragment_profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <action android:id="@+id/action_global_home_page" app:destination="@id/home_page2" /><action android:id="@+id/action_global_fragment_profile" app:destination="@id/fragment_profile"/><action android:id="@+id/action_global_createPost" app:destination="@id/fragment_createPost"/><action android:id="@+id/action_global_login_fregment" app:destination="@id/login_fregment"/>
</navigation>