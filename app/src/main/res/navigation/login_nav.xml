<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.kinderview.Users.fragment_login"
        android:label="fragment_login_fregment"
        tools:layout="@layout/fragment_login_fregment" >
        <action
            android:id="@+id/action_fragment_login_to_fragment_sign_in"
            app:destination="@id/fragment_sign_in" />
        <action
            android:id="@+id/action_fragment_login_to_nav_graph"
            app:destination="@id/nav_graph" />
    </fragment>
    <fragment
        android:id="@+id/fragment_sign_in"
        android:name="com.example.kinderview.Users.fragment_sign_in"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_fragment_sign_in_to_nav_graph"
            app:destination="@id/nav_graph" />
    </fragment>
    <include app:graph="@navigation/nav_graph" />
</navigation>